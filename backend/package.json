{
  "name": "oneclick-trading-backend",
  "version": "1.0.0",
  "description": "Backend API for OneClick Copy-Trading Platform",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "migrate": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
    "seed": "knex seed:run",
    "db:reset": "npm run migrate:rollback && npm run migrate && npm run seed"
  },
  "dependencies": {
    "express": "^4.18.0",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.0",
    "jsonwebtoken": "^9.0.0",
    "bcryptjs": "^2.4.3",
    "@aptos-labs/ts-sdk": "^1.8.0",
    "pg": "^8.11.0",
    "knex": "^2.5.0",
    "redis": "^4.6.0",
    "ioredis": "^5.3.0",
    "ws": "^8.13.0",
    "socket.io": "^4.7.0",
    "bull": "^4.11.0",
    "cron": "^2.4.0",
    "axios": "^1.5.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.0",
    "decimal.js": "^10.4.0",
    "winston": "^3.10.0",
    "dotenv": "^16.3.0",
    "joi": "^17.9.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/compression": "^1.7.2",
    "@types/morgan": "^1.9.4",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/pg": "^8.10.0",
    "@types/ws": "^8.5.0",
    "@types/lodash": "^4.14.195",
    "@types/uuid": "^9.0.2",
    "@types/node": "^20.5.0",
    "typescript": "^5.1.0",
    "ts-node": "^10.9.0",
    "ts-node-dev": "^2.0.0",
    "jest": "^29.6.0",
    "@types/jest": "^29.5.0",
    "supertest": "^6.3.0",
    "@types/supertest": "^2.0.12",
    "eslint": "^8.47.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
