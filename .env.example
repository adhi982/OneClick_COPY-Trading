# ================================================
# ONECLICK COPY TRADING PLATFORM - ENVIRONMENT VARIABLES
# ================================================
# Copy this file to .env and fill in your actual values

# ================================================
# APPLICATION CONFIGURATION
# ================================================
NODE_ENV=development
PORT=3001
API_VERSION=v1
APP_NAME="OneClick Copy Trading"
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001

# ================================================
# REAL-TIME INTEGRATION (KANA LABS)
# ================================================
# Kana Labs Configuration
KANA_LABS_API_KEY=your_kana_labs_api_key_here
KANA_LABS_WS_URL=wss://api.kanalabs.io/ws
KANA_LABS_API_URL=https://api.kanalabs.io/v1

# WebSocket Configuration
WEBSOCKET_PORT=3001

# JWT Configuration for Real-time Auth
JWT_SECRET=your_jwt_secret_here

# Redis Configuration (optional for caching)
REDIS_URL=redis://localhost:6379

# ================================================
# APTOS BLOCKCHAIN CONFIGURATION (ANKR ENDPOINTS)
# ================================================
# Network Configuration (testnet/mainnet)
APTOS_NETWORK=testnet
APTOS_USE_ANKR=true

# Ankr RPC Endpoints
APTOS_ANKR_TESTNET_RPC=https://rpc.ankr.com/premium-http/aptos_testnet/9b9551f4449042d4364225e589629c978d25996d13368142fb0dfc7bbd74c0ce/v1
APTOS_ANKR_MAINNET_RPC=https://rpc.ankr.com/premium-http/aptos/9b9551f4449042d4364225e589629c978d25996d13368142fb0dfc7bbd74c0ce/v1

# Default Aptos RPCs (backup)
APTOS_TESTNET_RPC=https://fullnode.testnet.aptoslabs.com/v1
APTOS_MAINNET_RPC=https://fullnode.mainnet.aptoslabs.com/v1

# Smart Contract Deployment
APTOS_PRIVATE_KEY=your-private-key-here
APTOS_PUBLIC_KEY=your-public-key-here
APTOS_ACCOUNT_ADDRESS=your-account-address-here

# Smart Contract Addresses (will be filled after deployment)
COPY_TRADING_CONTRACT_ADDRESS=
USER_VAULT_CONTRACT_ADDRESS=
TRADER_REGISTRY_CONTRACT_ADDRESS=
RISK_MANAGER_CONTRACT_ADDRESS=

# Frontend Environment Variables
NEXT_PUBLIC_APP_NAME=OneClick Copy Trading
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3001

# Aptos Configuration for Frontend
NEXT_PUBLIC_APTOS_NETWORK=testnet
NEXT_PUBLIC_APTOS_NODE_URL=https://rpc.ankr.com/premium-http/aptos_testnet/9b9551f4449042d4364225e589629c978d25996d13368142fb0dfc7bbd74c0ce/v1
NEXT_PUBLIC_APTOS_INDEXER_URL=https://indexer-testnet.staging.gcp.aptosdev.com/v1/graphql
NEXT_PUBLIC_MODULE_ADDRESS=0x1234567890abcdef

# TradingView Configuration
NEXT_PUBLIC_TRADINGVIEW_LIBRARY_PATH=/charting_library/
NEXT_PUBLIC_TRADINGVIEW_CHARTS_STORAGE_URL=https://saveload.tradingview.com
NEXT_PUBLIC_TRADINGVIEW_CHARTS_STORAGE_API_VERSION=1.1

# Analytics & Monitoring
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn.sentry.io

# Feature Flags
NEXT_PUBLIC_ENABLE_COMMUNITY_FEATURES=true
NEXT_PUBLIC_ENABLE_ADVANCED_ANALYTICS=true
NEXT_PUBLIC_ENABLE_SOCIAL_TRADING=true

# Backend Environment Variables
NODE_ENV=development
PORT=8000
API_VERSION=v1

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/oneclick_trading
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=username
POSTGRES_PASSWORD=password
POSTGRES_DB=oneclick_trading

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT & Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret
REFRESH_TOKEN_EXPIRES_IN=30d

# Aptos Blockchain Configuration
APTOS_NETWORK=devnet
APTOS_NODE_URL=https://fullnode.devnet.aptoslabs.com/v1
APTOS_INDEXER_URL=https://indexer-devnet.staging.gcp.aptosdev.com/v1/graphql
APTOS_PRIVATE_KEY=your-aptos-private-key-for-admin-operations
MODULE_ADDRESS=0x1234567890abcdef

# External APIs
COINMARKETCAP_API_KEY=your-coinmarketcap-api-key
COINGECKO_API_KEY=your-coingecko-api-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Email Configuration (if needed)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# Monitoring & Analytics
SENTRY_DSN=https://your-sentry-dsn.sentry.io
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# Smart Contract Configuration
SMART_CONTRACT_ADDRESS=0xabcdef1234567890
ADMIN_PRIVATE_KEY=your-admin-private-key
GAS_LIMIT=100000
GAS_PRICE=100

# Development Tools
DEBUG=app:*
VERBOSE_LOGGING=true
ENABLE_CORS=true
ENABLE_COMPRESSION=true

# Production Overrides (these should be set in production environment)
# DATABASE_URL=postgresql://prod-user:prod-pass@prod-host:5432/oneclick_trading_prod
# REDIS_URL=redis://prod-redis-host:6379
# JWT_SECRET=production-jwt-secret-very-long-and-secure
# APTOS_NETWORK=mainnet
# APTOS_NODE_URL=https://fullnode.mainnet.aptoslabs.com/v1
# NODE_ENV=production
# LOG_LEVEL=warn
