{
  "name": "oneclick-copy-trading",
  "version": "1.0.0",
  "description": "OneClick Copy-Trading Platform on Aptos Blockchain",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm run test",
    "test:backend": "cd backend && npm run test",
    "test:contracts": "cd smart-contracts && aptos move test",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "clean": "rimraf frontend/.next frontend/out backend/dist smart-contracts/build",
    "setup": "npm install && npm run setup:frontend && npm run setup:backend && npm run setup:contracts",
    "setup:frontend": "cd frontend && npm install",
    "setup:backend": "cd backend && npm install",
    "setup:contracts": "cd smart-contracts && aptos move compile",
    "deploy:contracts": "cd smart-contracts && npm run deploy",
    "migrate": "cd backend && npm run migrate",
    "seed": "cd backend && npm run seed"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adhi982/OneClick_COPY-Trading.git"
  },
  "keywords": [
    "aptos",
    "copy-trading",
    "defi",
    "blockchain",
    "trading",
    "nextjs",
    "typescript",
    "move"
  ],
  "author": "OneClick Trading Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/adhi982/OneClick_COPY-Trading/issues"
  },
  "homepage": "https://github.com/adhi982/OneClick_COPY-Trading#readme",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  }
}
